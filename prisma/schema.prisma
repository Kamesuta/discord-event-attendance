// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Event {
  id Int @id @default(autoincrement())

  name      String
  channelId String
  eventId   String
  active    Boolean   @default(true)
  startTime DateTime  @default(now())
  endTime   DateTime?

  voiceLogs      VoiceLog[]
  stats          UserStat[]
  games          GameResult[]
  UserGameResult UserGameResult[]
}

model VoiceLog {
  id Int @id @default(autoincrement())

  eventId   Int
  userId    String
  timestamp DateTime @default(now())
  join      Boolean

  event Event     @relation(fields: [eventId], references: [id])
  stat  UserStat  @relation(fields: [eventId, userId], references: [eventId, userId])
}

model UserStat {
  eventId Int
  userId  String

  duration Int
  show     Boolean?

  VoiceLog VoiceLog[]
  event    Event      @relation(fields: [eventId], references: [id])

  @@id([eventId, userId], name: "id")
}

model GameResult {
  id Int @id @default(autoincrement())

  eventId Int
  name    String
  url     String?

  users UserGameResult[]
  event Event            @relation(fields: [eventId], references: [id])
}

model UserGameResult {
  id Int @id @default(autoincrement())

  eventId Int
  userId  String
  gameId  Int
  rank    Int
  xp      Int

  event Event      @relation(fields: [eventId], references: [id])
  game  GameResult @relation(fields: [gameId], references: [id])
}
