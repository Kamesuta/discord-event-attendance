{
  "name": "discord-event-attendance",
  "version": "1.0.0",
  "description": "Discordでイベントに出席した人を記録し、統計の表示や出席者の確認ができるBotです。",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "start:bot": "tsx src/bot.ts",
    "start:mcp": "tsx src/mcp/server.ts",
    "clean": "rimraf dist",
    "lint": "tsc --noEmit && eslint src --ext .ts",
    "lint:fix": "tsc --noEmit && eslint src --ext .ts --fix",
    "prettier": "prettier --write",
    "lint-staged": "lint-staged",
    "prepare": "npx if-env NODE_ENV=production && echo 'Skipping husky in production' || husky",
    "heroku-postbuild": "prisma generate && prisma migrate deploy"
  },
  "author": "Kamesuta",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.5",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.1",
    "@types/node-schedule": "^2.1.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@prisma/client": "^6.19.0",
    "@twemoji/api": "^17.0.2",
    "csv-parse": "^6.1.0",
    "discord.js": "^14.24.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "if-env": "^1.0.4",
    "lodash": "^4.17.21",
    "log4js": "^6.9.1",
    "node-schedule": "^2.1.1",
    "prisma": "^6.19.0",
    "sharp": "^0.34.5",
    "toml": "^3.0.0",
    "tsx": "^4.20.6",
    "zod": "^4.1.12"
  }
}
